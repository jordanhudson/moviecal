{
  "name": "moviecal",
  "version": "1.0.0",
  "description": "Movie times scraper for various venues",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "scrape": "node dist/scrape.js",
    "migrate": "tsx src/db/migrate.ts",
    "clear": "tsx src/db/clear.ts",
    "drop": "tsx src/db/drop.ts",
    "server": "tsx --watch src/server.ts"
  },
  "keywords": [
    "scraper",
    "movies",
    "cinema"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.16.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "dotenv": "^17.2.3",
    "hono": "^4.11.3",
    "kysely": "^0.28.9",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "puppeteer": "^23.11.1"
  }
}
